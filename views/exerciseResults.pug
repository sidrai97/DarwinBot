html
    head
        title Exercises Encyclopedia ðŸ“”
        meta(charset="utf-8")
        meta(name="theme-color", content="#427BBE")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
        link(rel="stylesheet", href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css")
        script(src="https://code.jquery.com/jquery-1.12.4.js")
        script(src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js")
        script(type='text/javascript').
            $(document).ready(function() {
                $('#exerciseTable').DataTable();
            });        

    body(class="container-fluid" style="background: #a0a0a0;")
        table(id="exerciseTable", class="table")
            thead
                tr
                    th(class="col-sm-1 col-xs-1 col-md-1 col-lg-1", style ="text-transform: capitalize;")
                    th(class="", style ="text-transform: capitalize;") Exercise
                    th(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;") Muscle
                    th(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;") Type
                    th(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;") Equipment
                    th(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;") Level
            tbody
                each val in edata
                    tr
                        td(class="col-sm-1 col-xs-1 col-md-1 col-lg-1", style ="text-transform: capitalize;")
                            img(class="img img-responsive img-circle", src= val.right_img_url,height=50)
                            br
                            a(href= "/getExerciseDetails?userid="+userid+"&id="+val._id, class="btn btn-info",style="margin-top:5px;") View
                        td(class="", style ="text-transform: capitalize;")= val.name
                        td(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;")= val.muscle
                        td(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;")= val.type
                        td(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform: capitalize;")= val.equipment                            
                        td(class="col-sm-2 col-xs-2 col-md-2 col-lg-2", style ="text-transform:capitalize;")= val.level